{
  "hosting": {
    "public": "frontend/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/*",
        "function": "api",
        "region": "europe-west1",
        "pinTag": true
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": [
      "npm --prefix frontend run build"
    ]
  },
  "functions": [
    {
      "source": "backend",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build",
        "cp \"$RESOURCE_DIR\"/creds.json \"$RESOURCE_DIR\"/lib/",
        "cp \"$RESOURCE_DIR\"/.env \"$RESOURCE_DIR\"/lib/"
      ]
    }
  ]
}